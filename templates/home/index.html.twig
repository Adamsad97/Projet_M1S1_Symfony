{% extends 'base.html.twig'%}

{% block body%}
    <section class="max-w-4xl mx-auto text-center py-12 px-4 mb-10">
        <h1 class="text-4xl sm:text-5xl font-extrabold text-gray-900 mb-4 drop-shadow-lg">Bienvenue sur ElecSmartDev</h1>
        <p class="text-lg sm:text-xl text-gray-600 mb-6">Découvrez l’innovation, la qualité et le service au meilleur prix pour tous vos besoins en matériel électronique et domotique.</p>

    </section>
    <div class="w-full max-w-5xl mx-auto mb-10">
        <div class="grid grid-cols-1 md:grid-cols-{{ headers|length > 1 ? 2 : 1 }} gap-6">
            {% for header in headers %}
                <div class="relative rounded-3xl overflow-hidden shadow-lg bg-gradient-to-br from-blue-50 to-blue-100 flex flex-col md:flex-row items-center">
                    <img src="/uploads/{{ header.illustration }}" alt="{{ header.title }}" class="w-full md:w-1/2 h-64 object-cover object-center">
                    <div class="p-8 flex-1 flex flex-col justify-center items-start">
                        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-2">{{ header.title }}</h2>
                        <p class="text-gray-700 mb-4">{{ header.content }}</p>
                        {% if header.buttonLink and header.buttonTitle %}
                        <a href="{{ header.buttonLink }}" class="inline-block px-6 py-2 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow transition">{{ header.buttonTitle }}</a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


    

    <div class="max-w-6xl mx-auto px-4">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
            {% for product in productInHomepage %}
                <div class="bg-white rounded-2xl shadow-md p-6 flex flex-col items-center hover:shadow-xl transition">
                    <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="w-full h-40 object-cover rounded-xl mb-4">
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">{{ product.name }}</h3>
                    <div class="text-gray-600 text-sm mb-3">{{ product.description|raw }}</div>
                    <a href="{{ path('app_product', {slug:product.slug}) }}" class="inline-block px-5 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg font-medium transition">Découvrir &raquo;</a>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

