{% extends 'base.html.twig' %}


{% block body %}
    <div class="container my-5">
        <h1>Connexion</h1>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post">
            <label for="username">Votre email:</label>
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required>

            <label for="password mt-2">Votre mot de passe:</label>
            <input class="form-control" type="password" id="password" name="_password" required>

            {# Rédirection sur la page espace membre privé quand on est connecté app_account#}
        <input type="hidden" name="_target_path" value="{{ path('app_account') }}">

            <button class="btn btn-success mt-2" type="submit">Me connecter</button> <br>
            <h10>Vous n'avez pas de compte ?</h10>
            <a href="{{ path('app_register') }}">Créer un compte</a>
        </form>
    </div>
{% endblock %}
