
{% if field.value == 1 %}
    <span class="badge bg-body-secondary ">En attente de paiement</span>
{% elseif field.value == 2 %}
    <span class="badge bg-success text-white">Payée</span>
{% elseif field.value == 3 %}
    <span class="badge bg-primary">En cours de préparation</span>
{% elseif field.value == 4 %}
    <span class="badge bg-primary">Expédiée</span>
{% elseif field.value == 5 %}
    <span class="badge bg-primary">Annulée</span>
{% endif %}




