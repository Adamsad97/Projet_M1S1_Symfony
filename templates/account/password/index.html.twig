{% extends '/base.html.twig' %}

{% block body %}
    <div class="max-w-6xl mx-auto px-4 py-10">
        <h1 class="text-2xl font-bold text-gray-800 mb-8">Espace Client</h1>

        <div class="flex flex-col md:flex-row gap-8">

            <div class="w-full md:w-1/4">
                {% include 'account/_menu.html.twig' %}
            </div>


            <div class="w-full md:w-3/4">
                <h2 class="text-lg font-semibold text-gray-700 mb-4">Modification du mot de passe</h2>
                <div class="bg-white bg-gradient-to-b from-zinc-700 to-zinc-900
 rounded-2xl p-6 shadow-md">
                  {{ form_start(modifypwd) }}
                    <div class="mb-4">
                      {{ form_label(modifypwd.acuelpassword, null, {'label_attr': {'class': 'block text-white font-bold mb-2'}}) }}
                      {{ form_widget(modifypwd.acuelpassword, {'attr': {'class': 'w-full px-3 py-1 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-green-400 bg-gray-100'}}) }}
                      {% if form_errors(modifypwd.acuelpassword) %}
                        <div class="text-red-600 text-sm mt-1">{{ form_errors(modifypwd.acuelpassword) }}</div>
                      {% endif %}
                    </div>
                    <div class="mb-4">
                      {{ form_label(modifypwd.plainPassword.first, null, {'label_attr': {'class': 'block text-white font-bold mb-2'}}) }}
                      {{ form_widget(modifypwd.plainPassword.first, {'attr': {'class': 'w-full px-3 py-1 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-green-400 bg-gray-100'}}) }}
                      {% if form_errors(modifypwd.plainPassword.first) %}
                        <div class="text-red-600 text-sm mt-1">{{ form_errors(modifypwd.plainPassword.first) }}</div>
                      {% endif %}
                    </div>
                    <div class="mb-4">
                      {{ form_label(modifypwd.plainPassword.second, null, {'label_attr': {'class': 'block text-white font-bold mb-2'}}) }}
                      {{ form_widget(modifypwd.plainPassword.second, {'attr': {'class': 'w-full px-3 py-1 border border-gray-300 rounded-2xl focus:outline-none focus:ring-2 focus:ring-green-400 bg-gray-100'}}) }}
                      {% if form_errors(modifypwd.plainPassword.second) %}
                        <div class="text-red-600 text-sm mt-1">{{ form_errors(modifypwd.plainPassword.second) }}</div>
                      {% endif %}
                    </div>
                    <div class="mb-6">
                      {{ form_widget(modifypwd.submit, {'attr': {'class': 'w-auto bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200 shadow cursor-pointer'}}) }}
                    </div>
                  {{ form_end(modifypwd) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
