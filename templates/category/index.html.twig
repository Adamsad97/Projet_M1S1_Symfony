{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-6xl mx-auto py-12 px-4">
        <h1 class="font-extrabold text-4xl mb-4 text-center text-green-900 tracking-tight">{{ category.name }}</h1>
        <p class="mb-10 text-center text-gray-700 text-lg">Pour cette cat√©gorie, il reste {{ category.products|length }} produit(s) disponible(s)</p>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
            {% for product in category.products %}
                <div class="flex flex-col items-center bg-green-50 rounded-2xl p-4 shadow hover:bg-green-100 transition group">
                    <a href="{{ path('app_product', {slug:product.slug}) }}" class="block w-full">
                        <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="mx-auto w-28 h-28 rounded-2xl object-contain shadow-sm transition-transform duration-200 group-hover:scale-105 bg-white">
                        <span class="block font-semibold text-green-900 mt-3 text-lg">{{ product.name }}</span>
                    </a>
                    <span class="block text-green-700 mt-2 text-base font-bold">{{ product.pricewt|price }}</span>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
