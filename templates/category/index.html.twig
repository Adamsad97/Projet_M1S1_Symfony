{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto my-12 text-center">
        <h1 class="font-bold text-3xl mb-4">{{ category.name }}</h1>
        <p class="mb-8">Pour cette cat√©gorie, il reste {{ category.products|length }} produit(s) disponible(s)</p>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-2">
            {% for product in category.products %}
                <div class="text-center bg-green-50 rounded-2xl p-2 w-full sm:w-40 md:w-52 lg:w-60 mx-auto transition duration-200 hover:bg-green-100 group">
                    <a href="{{ path('app_product', {slug:product.slug}) }}" class="no-underline transition duration-200 block">
                    <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="mx-auto w-20 h-auto rounded-2xl object-contain shadow transition-transform duration-200 group-hover:scale-110">
                        <span class="block font-semibold text-black mt-2">{{ product.name }}</span>
                    </a>
                    <span class="block text-green-700 mt-1">{{ product.pricewt|price }}</span>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
