{% extends 'base.html.twig' %}
{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-50 py-8 px-4">
  <div class="w-full max-w-md bg-gradient-to-b from-gray-300 to-gray-400 rounded-2xl p-4 shadow-md">
    <h1 class="text-2xl font-bold mb-6 text-center">Inscription</h1>
    {{ form_start(registerForm) }}
      <div class="mb-4">
        {{ form_label(registerForm.firstname, null, {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
        {{ form_widget(registerForm.firstname, {'attr': {'class': 'w-full px-3 py-2 border border-gray-200 bg-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-green-400'}}) }}
        {% if form_errors(registerForm.firstname) %}
          <div class="text-red-600 text-sm mt-1">{{ form_errors(registerForm.firstname) }}</div>
        {% endif %}
      </div>
      <div class="mb-4">
        {{ form_label(registerForm.lastname, null, {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
        {{ form_widget(registerForm.lastname, {'attr': {'class': 'w-full px-3 py-2 border border-gray-200 bg-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-green-400'}}) }}
        {% if form_errors(registerForm.lastname) %}
          <div class="text-red-600 text-sm mt-1">{{ form_errors(registerForm.lastname) }}</div>
        {% endif %}
      </div>
      <div class="mb-4">
        {{ form_label(registerForm.email, null, {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
        {{ form_widget(registerForm.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-200 bg-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-green-400'}}) }}
        {% if form_errors(registerForm.email) %}
          <div class="text-red-600 text-sm mt-1">{{ form_errors(registerForm.email) }}</div>
        {% endif %}
      </div>
      <div class="mb-4">
        {{ form_label(registerForm.plainPassword.first, null, {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
        {{ form_widget(registerForm.plainPassword.first, {'attr': {'class': 'w-full px-3 py-2 border border-gray-200 bg-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-green-400'}}) }}
        {% if form_errors(registerForm.plainPassword.first) %}
          <div class="text-red-600 text-sm mt-1">{{ form_errors(registerForm.plainPassword.first) }}</div>
        {% endif %}
      </div>
      <div class="mb-4">
        {{ form_label(registerForm.plainPassword.second, null, {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
        {{ form_widget(registerForm.plainPassword.second, {'attr': {'class': 'w-full px-3 py-2 border border-gray-200 bg-gray-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-green-400'}}) }}
        {% if form_errors(registerForm.plainPassword.second) %}
          <div class="text-red-600 text-sm mt-1">{{ form_errors(registerForm.plainPassword.second) }}</div>
        {% endif %}
      </div>
      <div class="mb-6">
        {{ form_widget(registerForm.submit, {'attr': {'class': 'w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 border-gray-200 bg-gray-200 rounded-2xl transition duration-200 shadow cursor-pointer'}}) }}
      </div>
    {{ form_end(registerForm) }}
    <p class="mt-4 text-center font-semibold text-gray-700">Vous avez déjà un compte ?
      <a href="{{ path('app_login') }}" class="text-blue-700 hover:underline font-semibold">Connectez-vous ici</a>.
    </p>
  </div>
</div>
{% endblock %}
